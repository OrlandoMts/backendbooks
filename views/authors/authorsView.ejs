<%- include ../layouts/header.ejs %>
  <body>
    <div class="container">
      <div>
        <h1><%= title %></h1>
        <p>Seccion de los autores</p>
        <div>
          <a href="/authors/create" class="btn btn-primary" type="button">Aregar autor</a>
          <a href="../" class="btn btn-secondary" type="button">Inicio</a>
        </div>
      </div>

      <div class="container">
        <table class="table table-light">
          <thead class="thead-light">
            <tr>
              <th>#ID</th>
              <th>Nombre</th>
            </tr>
          </thead>
          <tbody>
            <% for( let author = 0; author < authors.length; author++ ) { %>
              <tr>
                <td> <%= authors[author].id %> </td>
                <td> <%= authors[author].name %> </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    </div>
  </body>
<%- include ../layouts/footer.ejs %>
